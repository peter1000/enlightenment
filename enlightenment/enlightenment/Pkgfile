# Description: Enlightenment window manager.
# URL: http://www.enlightenment.org/
# Packager: berlius at nutyx dot com
# Depends on: elementary emotion-generic-players evas-generic-loaders xcb-util-keysyms efl python-efl

run=(elementary emotion-generic-players evas-generic-loaders efl python-efl)

name=enlightenment
version=0.19.13
release=2
source=(http://download.enlightenment.org/rel/apps/enlightenment/$name-$version.tar.gz enlightenment.patch)

build()
{
    cd $name-$version
    
    patch -p1 -i $SRC/enlightenment.patch
    
    ./configure --prefix=/usr \
                --disable-mount-udisks
                
    make
    make DESTDIR=$PKG install
    
}
