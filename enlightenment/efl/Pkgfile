# Description: efl libraries
# URL: http://www.enlightenment.org/
# Packager: berlius at nutyx dot com
# Depends on: lua dbus libsndfile xorg-libxp xorg-libxscrnsaver gst-plugins-base giflib libtiff gstreamer pulseaudio bullet luajit fribidi freetype xorg-fontconfig xorg-libxrender xorg-libxrandr gstreamer1 xorg-libxcursor xorg-libxcomposite xorg-libxinerama xorg-libxtst gstreamer1-plugins-good

name=efl
version=1.16.0
release=1
source=(http://download.enlightenment.org/rel/libs/efl/$name-$version.tar.gz)

build()
{
    cd $name-$version 
    ./configure --prefix=/usr \
                --disable-gstreamer \
                --enable-gstreamer1 \
                --enable-multisense \
                --with-tests=none \
                --with-opengl=full \
                --disable-doc
    make
    make DESTDIR=$PKG install
}
